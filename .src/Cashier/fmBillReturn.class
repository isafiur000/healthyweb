            Next
          Endif
          modDatabase.$myConn.Commit

          ShowReturnGrid()
          cmbroute.SetFocus
        Else
          Message.Info("Invoice has gone through return. Add manually", ("OK"))
        Endif

      Endif
    Else
      Message.Warning(("Reason for Return is empty"), ("OK"))
    Endif
  Endif

Catch
  modDatabase.$myConn.Rollback
  modHelpVariable.CreateErrorReport()

End

