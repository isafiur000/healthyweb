' Gambas class file

Private $CodePath As String
Private $sValue As String[]

Public Sub Run(CodePath As String) As String[]

  $CodePath = CodePath
  lstgroup.List = modAyurv.GetDiagnoGroupList($CodePath)
  If Me.ShowModal() Then Return $sValue

End

