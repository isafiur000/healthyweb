Public Sub btnclose_Click()

  Me.Close()

End

Public Sub btnexec_Click()

  Me.Exec("htmlautocomplete(" & JS(TextHTML1.Name) & ", " & JS(WebContainer3.Name) & ")")

End

Public Sub dctexectext_Click()

  TextHTML1.RichText = TextHTML1.RichText & DictionaryVIew(modBasic.$dictadvPath)

End

Public Sub btnaddnew_Click()

  Dim sWord As String[]
  Dim xwors As String

  sWord = InputDoubleText("Add List to Text Completion List", ["Input", "Output"])
  If sWord Then
    xwors = "{ key: '" & sWord[0] & "', value: '" & sWord[1] & "' }"
    WebForm._AddJavascript("$AutoTextComoleteList.push(" & xwors & ")")
  Endif

End

Public Sub btncloudai_Click()

  If TextHTML1.Text Then
    TextHTML1.Text = TextHTML1.Text & gb.NewLine & modCloudAI.GetAllCloudAIResponse()
  Else
    TextHTML1.Text = modCloudAI.GetAllCloudAIResponse()
  Endif

End
