Public Sub mnupic_Click()

  Dim hForm As FmPersonImage

  If GridView1.Selection.Count Then
    $rData.MoveTo(GridView1.Selection[0])
    hForm = New FmPersonImage("Patient", $rData["fldpatientval"], False)
