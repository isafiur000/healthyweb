Public Function UploadClaim() As String

  Dim xval As String

  If $rData.Available Then
    If $rData["fldscheme"] = "Accident SSF" Then
      If $EmployerID Then
        xval = GetUploadClaim()
      Else
        Message.Warning("Employer ID is missing", "OK")
      Endif
    Else
      xval = GetUploadClaim()
    Endif
  Endif

  Return xval

End
