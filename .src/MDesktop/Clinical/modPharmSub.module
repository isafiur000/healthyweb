Public Sub DuplicateRecordWithQTY(did As Long, qty As Float)

  Dim rs As Result
  Dim hField As ResultField
  Dim res As Result

  rs = modDatabase.$myConn.Exec("select *from tblpatdosing where fldid=&1", did)
  res = modDatabase.$myConn.Create("tblpatdosing")
  For Each hField In rs.Fields
    If hField.Name = "fldqtydisp" Then
      res[hField.Name] = qty
    Else If hField.Name = "fldqtyret" Then
      res[hField.Name] = 0
    Else
      res[hField.Name] = rs[hField.Name]
    Endif
  Next
  res.Update
  'don't catch error

End

Public Sub GetSplitRecordWithQTY(xIndex As Long, newqty As Float)

  Dim rs As Result
  Dim hField As ResultField
  Dim res As Result

  rs = modDatabase.$myConn.Edit("tblpatdosing", "fldid=&1 and fldqtyret=&2", xIndex, 0)
  If rs.Available Then
    If newqty < rs["fldqtydisp"] Then
      res = modDatabase.$myConn.Create("tblpatdosing")
      For Each hField In rs.Fields
        If hField.Name = "fldqtydisp" Then
          res[hField.Name] = newqty
        Else
          res[hField.Name] = rs[hField.Name]
        Endif
      Next
      res.Update

      rs["fldqtydisp"] = rs["fldqtydisp"] - newqty
      rs.Update
    Endif
  Endif

End

