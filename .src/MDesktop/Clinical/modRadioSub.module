Public Function GetRadioAutoIncreasingNo(sTestName As String) As String

  Dim xsampauto As String
  Dim xprefix As String
  Dim sSection As String

  xprefix = modBasic.$RadioSamplePrefix
  If modBasic.$RadioSampleSource = "Department" Then
    xsampauto = xprefix & CStr(modBillLock.GetRadiologyID())
  Else If modBasic.$RadioSampleSource = "Section" Then
    sSection = modFixRadio.GetRadioTestCategory(sTestName)
    If sSection Then
      xsampauto = xprefix & CStr(modBillLock.GetRadiologyID(sSection))
    Endif
  Else
    If modBasic.$LabAutoSampNo = "Yes" Then
      xsampauto = xprefix & CStr(modBillLock.CurrentRadioNo())
    Else
      xsampauto = xprefix
    Endif
  Endif
  Return xsampauto

End

Public Function GetRadioRepoOrder(sType As String) As String

  Dim xx As String
  Dim xorder As String

  xorder = modBasic.$LabTestOrdering
  If xorder Then
    If xorder = "ASC" Then
      If sType = "Test" Then
        xx = " ORDER BY fldtestid ASC"
      Else If sType = "SubTest" Then
        xx = " ORDER BY fldsubtest ASC"
      Endif
    Else If xorder = "DESC" Then
      If sType = "Test" Then
        xx = " ORDER BY fldtestid DESC"
      Else If sType = "SubTest" Then
        xx = " ORDER BY fldsubtest DESC"
      Endif
    Else If xorder = "Manual" Then
      If sType = "Test" Then
        xx = " ORDER BY fldorder ASC"
      Else If sType = "SubTest" Then
        xx = " ORDER BY fldorder ASC"
      Endif
    Else
      If sType = "Test" Then
        xx = ""
      Else If sType = "SubTest" Then
        xx = ""
      Endif
    Endif
  Else
    If sType = "Test" Then
      xx = ""
    Else If sType = "SubTest" Then
      xx = ""
    Endif
  Endif

  Return xx

End
