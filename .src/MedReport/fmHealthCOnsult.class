Public Sub _new(sLocaType As String, sLocation As String)

  cmblocation.Text = sLocaType
  cmbvalue.Text = sLocation

  cmbbillmode.List = modNonMedical.FillCashModeCombo()
  cmbbillmode.Add("%")
  cmbbillmode.Text = "%"
  cmbcomp.List = modBasic.$AllCompPerList
  cmbcomp.Text = "%"
  If MMain.$WebReport = "Multiple" Then
    cmbrow.List = ["Gender", "Surname", "District", "Municipality", "Ethnic Group", "Regd Department", "Rate Plan", "Package", "Visit Type", "Visit Mode", "Last Status", "Year", "Month", "Date", "OPD Department", "OPD Consultant", "OPD Rate Plan", "OPD Outcome", "Hospital"]
    cmbcolumn.List = ["Gender", "Surname", "District", "Municipality", "Age Group", "Age Group (Gender)", "Regd Department", "Rate Plan", "Package", "Visit Type", "Visit Mode", "Last Status", "OPD Department", "OPD Consultant", "OPD Rate Plan", "OPD Outcome", "Hospital"]
  Else
    cmbrow.List = ["Gender", "Surname", "District", "Municipality", "Ethnic Group", "Regd Department", "Rate Plan", "Package", "Visit Type", "Visit Mode", "Last Status", "Year", "Month", "Date", "OPD Department", "OPD Consultant", "OPD Rate Plan", "OPD Outcome"]
    cmbcolumn.List = ["Gender", "Surname", "District", "Municipality", "Age Group", "Age Group (Gender)", "Regd Department", "Rate Plan", "Package", "Visit Type", "Visit Mode", "Last Status", "OPD Department", "OPD Consultant", "OPD Rate Plan", "OPD Outcome"]
  Endif
  If MMain.$IsPolice = True Then
    cmbrow.Add("Service Rank")
    cmbrow.Add("Service Unit")
    cmbrow.Add("Service Category")

    cmbcolumn.Add("Service Rank")
    cmbcolumn.Add("Service Unit")
    cmbcolumn.Add("Service Category")
  Endif
  cmbvisit.List = ["NEW", "OLD", "%"]
  cmbvisit.Text = "%"
  cmbdepart.List = modGeneral.GetDepartForConsultOnly()
  cmbdepart.Add("%")
  cmbdepart.Text = "%"

  dtfir.Value = Now()
  dtlast.Value = Now()

End

Public Sub dtnepfir_Click()

  Dim xx As String

  xx = BSDateFormat(("Enter BS Date in yyyy/mm/dd format"), ("Date Converter"), modDate.ConvertToLocaldate(dtfir.Value))
  If xx Then
    dtfir.Value = modDate.ConvertToEnglishdate(xx)
  Endif

End

Public Sub dtneplast_Click()

  Dim xx As String

  xx = BSDateFormat(("Enter BS Date in yyyy/mm/dd format"), ("Date Converter"), modDate.ConvertToLocaldate(dtlast.Value))
  If xx Then
    dtlast.Value = modDate.ConvertToEnglishdate(xx)
  Endif

End

Public Sub btngenerate_Click()

  Dim xPath As String

  If cmbcolumn.Text = "Age Group" Or If cmbcolumn.Text = "Age Group (Gender)" Then
    xPath = modRHTMLHealth.SummaryConsultSelectedAgeEncounter(modDatabase.$syConn, dtfir.Value, dtlast.Value, cmbrow.Text, cmbcolumn.Text, cmbbillmode.Text, cmbcomp.Text, cmbvisit.Text, cmbdepart.Text, cmblocation.Text, cmbvalue.Text)
  Else
    xPath = modRHTMLHealth.SummaryConsultSelectedEncounter(modDatabase.$syConn, dtfir.Value, dtlast.Value, cmbrow.Text, cmbcolumn.Text, cmbbillmode.Text, cmbcomp.Text, cmbvisit.Text, cmbdepart.Text, cmblocation.Text, cmbvalue.Text)                                                                       ''
  Endif
  modControlSub.OpenHTMLPreview("", xPath, "ReportSize")

End

Public Sub btngenerate2_Click()

  Me.Close()

End
