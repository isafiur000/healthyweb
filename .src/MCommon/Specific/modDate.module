Public Function GetSelectDateBSArrayBetween(sType As Integer, dt1 As Date, dt2 As Date) As Date[]

  Dim xxx As Date[]
  Dim xdt As Date

  xxx = New Date[]
  xdt = dt1
  While xdt <= dt2
    If sType = gb.Year Then
      xxx.Add(StartSqlYearBS(xdt))
