Public Sub btnshowunidoc_Click()

  Dim asx As String[]
  Dim xLink As String
  Dim hForm As FmPDF

  asx = Split(modPatPortal.$PortalMode, "@")
  If asx And If asx.Count = 2 Then
    xLink = modImage.GetBlobHashData(asx[0], asx[1])
    If xLink Then
      hForm = New FmPDF(modPrint.GetFileWebURL(xLink), Workspace1)
    Endif
  Endif

End
