End

Public Function EndSqlTenMinute(dt As Date) As Date

  Dim xx As Date
  Dim yy As Date

  xx = DateAdd(StartSqlTenMinute(dt), gb.Minute, 10)
  yy = DateAdd(xx, gb.Millisecond, -1)
  Return yy

End

