Private Sub FillUnitCombo()

  cmbnarcotic.List = ["Yes", "No"]
  cmbtabbreak.List = ["Yes", "No"]
  cmbcurrentuse.List = ["Active", "Inactive"]
  cmblabelprint.List = ["Brand", "Generic", "Both"]
