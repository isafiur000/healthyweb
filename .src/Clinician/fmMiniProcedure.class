Private Function GetProcedType() As String

  Dim xtype As String

  If rbminor.Value = True Then
    xtype = "Minor"
  Else If rbextra.Value = True Then
    xtype = "Extra"
  Else If rbplaster.Value = True
    xtype = "Plaster"
  Endif

  Return xtype

End

