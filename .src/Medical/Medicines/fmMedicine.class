Private Sub BlankMedStrength()

  txtdrug.text = ""
  cmbmedform.Text = ""
  txtmedstr.Value = 0
  txtmedstrunit.Text = ""
  txtmedminage.Value = 0
  txtmedref.Text = ""
  txtmedhelpPage.Text = ""
