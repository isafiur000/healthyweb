Public Function GetRadiotestCaption(strTest As String) As String

  Dim xx As String
  Dim res As Result

  If modTableCache.$RadioMasterData.Exist(strTest) Then
    xx = modTableCache.$RadioMasterData[strTest]["fldcaption"]
    If Not xx Then
      xx = ""
    Endif

  Else
    res = modDatabase.$medConn.Exec("select fldcaption from tblradio where fldexamid=&1", strTest)
    If res.Available Then
      If res["fldcaption"] Then
        xx = res["fldcaption"]
      Else
        xx = ""
      Endif
    Else
      xx = ""
    Endif
  Endif
  Return xx

End

