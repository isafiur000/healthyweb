' Gambas class file

Private $sValue As String

Public Sub Run(Optional sTitle As String, Optional sDefault As String) As String

  txttitle.Text = "<b>" & sTitle & "</b>"
  If sDefault Then
    TextHTML1.RichText = sDefault
  Endif
  modGeneralMain.GetOpenModalForm(Me)
  If modBasic.$TabletModeEnable = "Yes" Then
  Else
    TextHTML1.SetFocus
  Endif

  If Me.ShowModal() Then Return $sValue

End

Public Sub btnok_Click()

  $sValue = TextHTML1.RichText
  Me.Close(True)

End

Public Sub btnclear_Click()

  TextHTML1.Text = ""
  TextHTML1.RichText = ""

End

Public Sub btnclose_Click()

  Me.Close()

End

Public Sub btnexec_Click()

  Me.Exec("htmlautocomplete(" & JS(TextHTML1.Name) & ", " & JS(WebContainer3.Name) & ")")

End

Public Sub btnaddnew_Click()

  Dim sWord As String[]
  Dim xwors As String

  sWord = InputDoubleText("Add List to Text Completion List", ["Input", "Output"])
  If sWord Then
    xwors = "{ key: '" & sWord[0] & "', value: '" & sWord[1] & "' }"
    WebForm._AddJavascript("$AutoTextComoleteList.push(" & xwors & ")")
  Endif

End

Public Sub btncloudai_Click()

  TextHTML1.Text = CCluoudAiQuery(modBasic.$CloudAIClinQuery, TextHTML1.Text)

End
