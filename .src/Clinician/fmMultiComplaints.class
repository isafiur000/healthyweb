' Gambas class file

Private $encid As String
Private $ItemList As String[]
Private $ItemListFlag As String[]
Private $FlagLst As String[]
Private $sValueList As String[]

Private aWebPanel As New Object[100]
Private aMarkCheck As New Object[100]
Private aNameLabel As New Object[100]
Private aWebFrame As New Object[100]
Private aValueBox As New Object[100]
Private sButtonPlus As New Object[100]
Private sButtonMinus As New Object[100]
Private aVaSpace As New Object[100]
Private aComboBox As New Object[100]
Private bComboBox As New Object[100]
Private aWebLine As New Object[100]

Public Sub _new(encid As String)

  $encid = encid
  modGeneralMain.GetOpenModalForm(Me)
  $FlagLst = modFixPatho.GetFlaggedSymptomGroup()
  rbgroup.Value = True
  rbgroup_Click()

End

Public Sub rbfixed_Click()

  $ItemList = New String[]
  $ItemList = modString.GetDualListFromVariant(modFixPatho.$SymptomMasterVar, "fldcategory", "fldsymptom", True)
  $ItemListFlag = New String[]
  GetItemListData()

End

Public Sub rbgroup_Click()

  $ItemList = New String[]
  $ItemList = modString.GetDualListFromVariant(modFixPatho.$SymptomCompVar, "fldtype", "fldsymptom", True)
  $ItemListFlag = $FlagLst
  GetItemListData()

End

Private Sub GetItemListData()

  Dim categLst As String[]
  Dim xx As String
  Dim asx As String[]
  Dim xval As String[]

  categLst = New String[]
  If rbgroup.Value = True Then
    categLst.Add("Flagged")
  Endif
  xval = New String[]
  For Each xx In $ItemList
    If xx Then
      asx = Split(xx, "|")

      If asx[0] Then
        If categLst.Count = 0 Then
          categLst.Add(asx[0])
        Else
          If categLst.Exist(asx[0]) = False Then
            categLst.Add(asx[0])
          Endif
        Endif
      Endif

    Endif
  Next
  ListBox1.List = categLst

End

Public Sub btnshowall_Click()

  SHowComplaints()

End

Private Sub SHowComplaints()

  Dim xval As String[]
  Dim xx As String
  Dim asx As String[]

  Try $sValueList.Clear()
  Try Frame1.DeleteChildren()

  xval = New String[]
  If ListBox1.Text = "Flagged" Then
    For Each xx In $ItemListFlag
      If xx Then
        asx = Split(xx, "|")
        If xval.Count = 0 Then
          xval.Add(asx[1])
        Else
          If xval.Exist(asx[1]) = False Then
            xval.Add(asx[1])
          Endif
        Endif
      Endif
    Next

  Else
    For Each xx In $ItemList
      If xx Then
        asx = Split(xx, "|")
        If asx[0] = ListBox1.Text Then
          If xval.Count = 0 Then
            xval.Add(asx[1])
          Else
            If xval.Exist(asx[1]) = False Then
              xval.Add(asx[1])
            Endif
          Endif
        Endif
      Endif
    Next

  Endif

  $sValueList = xval
  LoadControls()

End

Private Sub LoadControls()

  Dim i As Integer

  For i = 0 To $sValueList.Count - 1
    If i < 99 Then
      aWebPanel[i] = New WebContainer(Frame1)
      aMarkCheck[i] = New WebCheckBox(aWebPanel[i]) As "IndexCheck"
      aNameLabel[i] = New WebHtml(aWebPanel[i])

      aWebFrame[i] = New WebContainer(Frame1)
      aValueBox[i] = New WebValueBox(aWebFrame[i])
      sButtonPlus[i] = New WebButton(aWebFrame[i]) As "PlusGroup"
      sButtonMinus[i] = New WebButton(aWebFrame[i]) As "MinusGroup"
      aVaSpace[i] = New WebContainer(aWebFrame[i])
      aComboBox[i] = New WebComboBox(aWebFrame[i])
      bComboBox[i] = New WebComboBox(aWebFrame[i])
      aWebLine[i] = New WebSeparator(aWebFrame[i])
    Endif
  Next

  For i = 0 To $sValueList.Count - 1
    If i < 99 Then

      With aWebPanel[i]
        .Class = "less-container-margin"
        .Arrangement = Arrange.Horizontal
      End With

      With aMarkCheck[i]
        .Width = "2em"
        .Height = "2em"
        .Tag = i
      End With
      With aNameLabel[i]
        .Font = "bold"
        .Text = "<p>" & $sValueList[i] & "</p>"
        ' .Height = "2em"
        .Tag = i
      End With

      With aWebFrame[i]
        .Class = "less-container-margin"
        .Arrangement = Arrange.Horizontal
        .Visible = False
      End With

      With aValueBox[i]
        .Width = "4em"
        .Height = "2em"
        .Tag = i
      End With

      With sButtonPlus[i]
        .Class = "transparent-control"
        .Width = "2em"
        .Height = "2em"
        .Image = "icon:/small/add"
        .Tag = i
      End With
      With sButtonMinus[i]
        .Class = "transparent-control"
        .Width = "2em"
        .Height = "2em"
        .Image = "icon:/small/remove"
        .Tag = i
      End With

      With aVaSpace[i]
        .Width = "1em"
      End With

      With aComboBox[i]
        .Height = "2em"
        .Width = "8em"
        .ReadOnly = False
        .Visible = False
        .List = ["Hours", "Days", "Weeks", "Months", "Years", "Episodes"]
        .Tag = i
      End With

      With bComboBox[i]
        .Expand = True
        .Height = "2em"
        .ReadOnly = False
        .Visible = False
        .List = modControlSub.GetDirectFillresult(modDatabase.$myConn.Exec("select fldsubsymptom as col from tblsubsymptoms where fldsymptom=&1", $sValueList[i]))
        .Tag = i
      End With

      With aWebLine[i]
        .Height = "2em"
      End With

    Endif
  Next

End

Public Sub PlusGroup_Click()

  Dim i As Integer

  i = Last.Tag
  aValueBox[i].Value = aValueBox[i].Value + 1

End

Public Sub MinusGroup_Click()

  Dim i As Integer

  i = Last.Tag
  aValueBox[i].Value = aValueBox[i].Value - 1

End

Public Sub IndexCheck_Click()

  Dim i As Integer

  i = Last.Tag
  If aMarkCheck[i].Value = True Then
    aWebFrame[i].Visible = True
    aComboBox[i].Visible = True
    bComboBox[i].Visible = True
    If modBasic.$TabletModeEnable = "Yes" Then
    Else
      aValueBox[i].SetFocus
    Endif
  Else If aMarkCheck[i].Value = False Then
    aWebFrame[i].Visible = False
    aComboBox[i].Visible = False
    bComboBox[i].Visible = False
  Endif

End

Public Sub btnBrOK_Click()

  Dim i As Integer

  For i = 0 To $sValueList.Count - 1
    If i < 99 Then
      If aMarkCheck[i].Value = True Then
        modPatientGeneral.AddPatComplaintsData($encid, "Presenting Symptoms", $sValueList[i], bComboBox[i].Text, aValueBox[i].Value, aComboBox[i].Text)
      Endif
    Endif
  Next
  Me.Exec(Subst("Toastify({text: '&1', duration: &2}).showToast()", "Information saved", modBasic.$BalloonDelay))

End

Public Sub btnBrChange_Click()

  Me.Close()

End
