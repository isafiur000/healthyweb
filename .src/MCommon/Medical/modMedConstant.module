  xval = modMedConstant.GetDrugDosingUnit(stockid)
  If Not xval Then
    xx = GetDrugStrengthUnit(stockid)
    If xx Then
      asx = Split(xx, "/")
      If asx.Count Then
        xval = asx[0]
      Else
        xval = xx
      Endif
    Else
      xval = "mg"
    Endif
  Endif

  Return xval

End

