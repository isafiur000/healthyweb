Public Function GetStockIDWithCategory(sMedList As String[]) As String[]

  Dim xx As String
  Dim asx As String
  Dim xval As String[]

  xval = New String[]
  For Each xx In sMedList
    asx = GetCategoryFromStockID(xx)
    If Not asx Then
      asx = "Unspecified"
    Endif
    xval.Add(asx & "@" & xx)
  Next
  Return xval

End

